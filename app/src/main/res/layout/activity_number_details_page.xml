<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/numberDetailsLayoutID"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".NumberDetailsPage">

<!--    appbar title wrapping issue-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/numberToolBarID"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_back"
                android:fontFamily="@font/montserrat_medium"
                android:text="Recent"
                android:textColor="@color/grey_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@drawable/cobra911_logo"
                tools:ignore="ContentDescription" />

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>

    <androidx.cardview.widget.CardView
        android:id="@+id/unKnownCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberToolBarID">

        <TextView
            android:id="@+id/unKnownText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Unknown Caller"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/smsButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/callButtonLayout"
        app:layout_constraintEnd_toStartOf="@+id/callButtonLayout"
        app:layout_constraintStart_toStartOf="@+id/unKnownCard"
        app:layout_constraintTop_toTopOf="@+id/callButtonLayout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/smsButtonID"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/sms_"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/smsTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:text="Send Message"
            android:textColor="@color/grey_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/callButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/dialButtonLayout"
        app:layout_constraintStart_toEndOf="@+id/smsButtonLayout"
        app:layout_constraintTop_toBottomOf="@+id/unKnownCard">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/callButtonID"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/dial_icon"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/callTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Call Back"
            android:textColor="@color/grey_color"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialButtonLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/callButtonLayout"
        app:layout_constraintEnd_toEndOf="@+id/unKnownCard"
        app:layout_constraintStart_toEndOf="@+id/callButtonLayout"
        app:layout_constraintTop_toTopOf="@+id/callButtonLayout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialButtonID"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/dial_pad_icon"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/dialTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Call Back"
            android:textColor="@color/grey_color" />

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recIdCall"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/callButtonLayout"
        tools:listitem="@layout/call_history_layout" />

    <View
        android:id="@+id/view_1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#979A9A"
        app:layout_constraintTop_toBottomOf="@+id/recIdCall" />

    <RelativeLayout
        android:id="@+id/mobileLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/view_1">

        <TextView
            android:id="@+id/mobile_text"
            android:text="mobile"
            android:layout_alignParentStart="true"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_medium"
            android:layout_width="wrap_content"
            android:textColor="@color/red_color"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/mobile_number"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:layout_toEndOf="@id/mobile_text"
            android:background="#6F938B8B">

            <TextView
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/recent_number_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="RECENT"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/mobile_number"
            android:text="+0123456789"
            android:layout_marginTop="3dp"
            android:layout_below="@id/mobile_text"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/red_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#979A9A"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@+id/mobileLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>